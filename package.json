{
  "name": "fluxfinance",
  "version": "1.0.0",
  "description": "Financial management application with purchase invoice functionality",
  "main": "app.js",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "npx playwright test --",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report",
    "start": "node app.js",
    "dev": "nodemon app.js",
    "init:db": "node --loader ts-node/esm init-db.ts"
  },
  "dependencies": {
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/express": "^5.0.1",
    "@types/jsdom": "^21.1.7",
    "bun-types": "^1.2.13",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  }
}
